{
  "$schema": "https://raw.githubusercontent.com/denoland/deno/main/cli/schemas/config-file.v1.json",
  "name": "backend",
  "tasks": {
    "dev": "deno run --allow-net --allow-read --allow-write --allow-env --allow-ffi --watch src/server.ts",
    "compile": "deno compile --allow-net --allow-read --allow-write --allow-env --allow-ffi --include src --include public --no-check src/server.ts"
  },
  "imports": {
    "@db/sqlite": "jsr:@db/sqlite@^0.12.0",
    "@oak/oak": "jsr:@oak/oak@^17.1.6",
    "@std/assert": "jsr:@std/assert@^1.0.15"
  },
  "exports": {},
  "exclude": ["public/"]
}
